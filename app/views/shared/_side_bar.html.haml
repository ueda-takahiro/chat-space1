.chat-side
  .chat-side__side-header
    %h3.chat-side__side-header__box
      = current_user.name
    %ul.chat-side__side-header__box__menu
      %li.chat-side__side-header__box__menu__new-group
        = link_to new_group_path do
          = fa_icon "pencil-square-o", class: "icon",style: "color:white;"
      %li.chat-side__side-header__box__menu__edit-user
        = link_to edit_user_path(current_user) do
          = fa_icon 'cog', class: 'icon',style: "color:white;" 
          
  .chat-side__groups
    .chat-side__groups__group
      - current_user.groups.each do |group|
        = link_to group_messages_path(group) do
          .chat-side__groups__group__name
            = group.name
          .chat-side__groups__group__name__latest-message
            = group.show_last_message
        